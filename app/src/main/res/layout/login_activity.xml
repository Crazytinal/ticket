<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:scrollbars="vertical" android:fadingEdge="vertical">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button android:text="@string/ret"
			android:id="@+id/login_ret" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20dp"
			android:text="用户登录" android:layout_marginTop="1dp">
		</TextView>
		<Button android:text="注册"
			android:id="@+id/login_zhuuce" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
	</LinearLayout>

	<LinearLayout android:id="@+id/yhm" android:layout_marginTop="20dp"
		android:gravity="center_horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView android:id="@+id/yhm_text" android:layout_width="80dp"
			android:text="用户名:" android:layout_height="wrap_content"
			android:textSize="18dp" />
		<EditText android:id="@+id/yh_edit" android:layout_width="180dp"
			android:hint="我的账户" android:layout_height="wrap_content"
			android:textSize="15dp" android:phoneNumber="true"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/mm" android:layout_marginTop="10dp"
		android:gravity="center_horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView android:id="@+id/mm_text" android:layout_width="80dp"
			android:text="密   码:" android:layout_height="wrap_content"
			android:textSize="18dp" />
		<EditText android:id="@+id/mm_edit" android:layout_width="180dp"
			android:hint="我的密码" android:layout_height="wrap_content"
			android:textSize="15dp" />
	</LinearLayout>

	<LinearLayout android:layout_marginTop="10dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button android:text="@string/login"
			android:id="@+id/login" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
	</LinearLayout>

	<LinearLayout android:id="@+id/dlsz" android:layout_marginTop="20dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
android:gravity="center_horizontal"
		android:orientation="horizontal">
		<TextView android:id="@+id/mm_text2" android:layout_width="80dp"
			android:text="登录设置" android:layout_height="wrap_content"
			android:textSize="18dp" />
	</LinearLayout>

</LinearLayout>
